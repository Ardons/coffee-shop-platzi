option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: coffee_shop.wsgi:application

  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: coffee_shop.settings
    PYTHONBUFFERED: "TRUE"
    DJANGO_DB_URL: YOUR_DATABASE_URL_HERE
    DEBUG: "False"

container_commands:
  01_migrate:
    command: "python manage.py migrate"
    leader_only: true

  02_collectstatic:
    command: "python manage.py collectstatic --noinput"
    leader_only: true

  03_permissions:
    command: "chmod -R 755 /var/app/current"